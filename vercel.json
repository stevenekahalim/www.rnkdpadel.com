{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/match/:id", "destination": "/match" },
    { "source": "/player/:id", "destination": "/match" },
    { "source": "/league/:id", "destination": "/match" },
    { "source": "/tournament/:id", "destination": "/match" }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    },
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ]
}
